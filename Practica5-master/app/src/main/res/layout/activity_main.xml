<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tecii.android.practica5.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Grados Centigrados: " />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtc"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnconv"
        android:text="Convertir"
        android:onClick="convertir"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Grados Farenheit: " />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Grados Kelvin: " />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtk"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Grados Ranking: " />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtr"/>
    </LinearLayout>

</LinearLayout>
